<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.six.treasurehunt.loginActivity"
    android:background="@android:color/holo_blue_dark">

    <ImageView
        android:layout_margin="50sp"
        android:id="@+id/imageView"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/treasurechesticon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="보물찾기"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold" />


    <com.google.android.gms.common.SignInButton
        android:layout_margin="50sp"
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView

        android:id="@+id/status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/goTreasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="NextActivity"
        android:text="보물을 찾아서! 출발!"
        android:visibility="gone" />


    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/img_profile"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_gravity="center"
            android:padding="10sp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_profile_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_profile_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:layout_marginHorizontal="10sp"
            android:id="@+id/sign_out_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10sp"
            android:text="로그 아웃"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
